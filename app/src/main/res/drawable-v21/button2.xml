<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/main_color">

    <item android:state_pressed="true">

        <shape android:shape="rectangle">

            <solid android:color="#ffdddd"/>
            <corners android:radius="3dp"/>
            <stroke android:color="#ffb9b9" android:width="1dp"/>






        </shape>



    </item>


    <item android:state_pressed="false">
        <shape android:shape="rectangle">

            <solid android:color="#fafafa"/>
            <corners android:radius="3dp"/>
            <stroke android:color="@color/main_color" android:width="1dp"/>






        </shape>



    </item>

</ripple>