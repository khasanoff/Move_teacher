<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        >


        <include layout="@layout/toolbar"/>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:orientation="vertical">



            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/EditText"
                android:layout_width="match_parent"


                android:layout_height="wrap_content"


                android:hint="First name"

                />

            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/EditText"
                android:layout_width="match_parent"


                android:layout_height="wrap_content"


                android:hint="Last name"

                />


            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/EditText"
                android:layout_width="match_parent"


                android:layout_height="wrap_content"


                android:hint="Father's name"

                />




            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/EditText"
                android:layout_width="match_parent"


                android:layout_height="wrap_content"


                android:hint="Phone number"

                android:inputType="phone"
                app:met_helperText="With code"
                app:met_helperTextColor="#818181"
                app:met_maxCharacters="13"
                android:maxLength="13"
                />


            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/EditText"
                android:layout_width="match_parent"


                android:layout_height="wrap_content"


                android:hint="E-mail"

                android:inputType="textEmailAddress"

                app:met_helperTextColor="#818181"
                android:maxLength="30"
                app:met_maxCharacters="30"
                />





            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_gravity="center"
                android:orientation="horizontal"

                >

                <RadioButton
                    style="@style/RadioButton"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"


                    android:text="Man" />

                <RadioButton
                    style="@style/RadioButton"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:text="Woman" />


            </RadioGroup>

            <View style="@style/view" />



            <Spinner
                android:id="@+id/districtSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

               android:layout_margin="6dp"


                />

            <View style="@style/view" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/EditText"
                android:layout_width="match_parent"


                android:layout_height="wrap_content"


                android:hint="Street"

                app:met_helperTextColor="#818181"

                android:maxLength="40"
                app:met_maxCharacters="40"

                android:layout_weight="1"

                />


                <com.rengwuxian.materialedittext.MaterialEditText
                    style="@style/EditText"
                    android:layout_width="match_parent"


                    android:layout_height="wrap_content"


                    android:hint="Number"
                    app:met_helperTextColor="#818181"

                    android:maxLength="5"
                    app:met_maxCharacters="5"

                android:layout_weight="3"

                    />


            </LinearLayout>



            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/EditText"
                android:layout_width="match_parent"


                android:layout_height="wrap_content"


                android:hint="Home number"


                />






            <EditText

                android:layout_width="match_parent"


                android:layout_height="150dp"

                android:background="@drawable/edit_text"
                android:hint="Simple orientation"
                android:textSize="14sp"
                android:textColorHint="#c7c7c7"

                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:maxLength="100"
                android:padding="6dp"
                android:gravity="top"
                android:textColor="#737373"

                />

                <Button
                    android:id="@+id/done_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="to book"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:layout_margin="16dp"
                    android:background="@drawable/button1"
                    />

        </LinearLayout>


    </ScrollView>


</android.support.design.widget.CoordinatorLayout>